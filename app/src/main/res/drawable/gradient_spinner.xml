<?xml version="1.0" encoding="utf-8"?>
<selector  xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <layer-list>
            <item>
                <shape>
                    <gradient android:angle="90.0" android:endColor="@color/transparent" android:startColor="@color/transparent" android:type="linear" />
                    <stroke android:color="@color/divider" android:width="1dp" />
                    <corners android:radius="4dp" />
                    <padding android:bottom="2dp" android:left="2dp" android:right="2dp" android:top="2dp" />
                </shape>
            </item>
            <item>
                <bitmap android:gravity="start" android:src="@drawable/arrow_down" />
            </item>
        </layer-list>
    </item>
</selector>
